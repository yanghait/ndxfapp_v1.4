<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/inspect_layout"
    android:layout_height="match_parent">

    <include
        layout="@layout/activity_inspection_task_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/inspect_right_menu"
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:clickable="false"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/menu_normal_bac"
            android:paddingLeft="15dp"
            android:textSize="16sp"
            android:textColor="@color/inspection_list_text"
            android:gravity="center_vertical"
            android:text="筛选"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:id="@+id/inspect_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="巡检类型"/>
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/sliding_type1"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:checked="false"
                    android:text="每日巡检"
                    android:textColor="@drawable/inspect_home_text_selector"
                    android:button="@null"
                    android:background="@drawable/inspect_home_selector"
                    />

                <CheckBox
                    android:id="@+id/sliding_type2"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:checked="false"
                    android:text="防火检查"
                    android:textColor="@drawable/inspect_home_text_selector"
                    android:button="@null"
                    android:background="@drawable/inspect_home_selector"
                    />
                <CheckBox
                    android:id="@+id/sliding_type3"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="12sp"
                    android:visibility="invisible"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:checked="false"
                    android:text="防火检查"
                    android:textColor="@drawable/inspect_home_text_selector"
                    android:button="@null"
                    android:background="@drawable/inspect_home_selector"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sliding_layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/sliding_type4"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:checked="false"
                    android:text="每日巡检"
                    android:textColor="@drawable/inspect_home_text_selector"
                    android:button="@null"
                    android:background="@drawable/inspect_home_selector"
                    />

                <CheckBox
                    android:id="@+id/sliding_type5"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:checked="false"
                    android:text="防火检查"
                    android:textColor="@drawable/inspect_home_text_selector"
                    android:button="@null"
                    android:background="@drawable/inspect_home_selector"
                    />
                <CheckBox
                    android:id="@+id/sliding_type6"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:checked="false"
                    android:text="防火检查"
                    android:textColor="@drawable/inspect_home_text_selector"
                    android:button="@null"
                    android:background="@drawable/inspect_home_selector"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sliding_layout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/sliding_type7"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:checked="false"
                    android:text="每日巡检"
                    android:textColor="@drawable/inspect_home_text_selector"
                    android:button="@null"
                    android:background="@drawable/inspect_home_selector"
                    />

            </LinearLayout>


            <View android:layout_width="match_parent"
                android:background="@color/menu_normal_bac"
                android:visibility="invisible"
                android:layout_height="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"
                android:visibility="invisible"
                android:textColor="@color/black"
                android:text="完成状态"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:visibility="invisible"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/sliding_state1"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:checked="false"
                    android:text="待巡检"
                    android:textColor="@drawable/inspect_home_text_selector"
                    android:button="@null"
                    android:background="@drawable/inspect_home_selector"
                    />

                <CheckBox
                    android:id="@+id/sliding_state2"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:checked="false"
                    android:text="已完成"
                    android:textColor="@drawable/inspect_home_text_selector"
                    android:button="@null"
                    android:background="@drawable/inspect_home_selector"
                    />

                <CheckBox
                    android:id="@+id/sliding_state3"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:checked="false"
                    android:text="逾期"
                    android:textColor="@drawable/inspect_home_text_selector"
                    android:button="@null"
                    android:background="@drawable/inspect_home_selector"
                    />

            </LinearLayout>
            <View android:layout_width="match_parent"
                android:background="@color/menu_normal_bac"
                android:visibility="invisible"
                android:layout_height="1dp"/>
            <View android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="bottom"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <Button
                    android:id="@+id/sliding_reset"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/button_order_audit"
                    android:text="重置"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/sliding_confirm"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button_order_audit_right"
                    android:text="确定"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>