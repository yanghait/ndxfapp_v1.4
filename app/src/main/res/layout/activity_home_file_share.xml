<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/tool_bar"
        app:navigationIcon="@mipmap/back"
        app:subtitleTextColor="#ffffff">

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxEms="14"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/backgroundcolor"
            android:textSize="@dimen/txt_title_first" />

        <ImageButton
            android:id="@+id/file_share_download_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:background="@mipmap/download_list" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/file_share_select_project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="15dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@mipmap/main_menu" />

        <TextView
            android:id="@+id/file_share_project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="云南驰宏锌股份有限公司"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/file_share_select_pro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:src="@mipmap/btn_select_icon" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/file_share_my"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/file_share_my_file_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/file_share_my" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/line1"
            android:layout_alignLeft="@+id/line1"
            android:layout_marginBottom="10dp"
            android:text="我的文件"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignBottom="@+id/file_share_my_file_img"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/file_share_my_file_img"
            android:background="@color/global_line_color" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/file_share_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/file_share_shre_file_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/file_share_all" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/line2"
            android:layout_alignLeft="@+id/line2"
            android:layout_marginBottom="10dp"
            android:text="共享文件"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignBottom="@+id/file_share_shre_file_img"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/file_share_shre_file_img"
            android:background="@color/global_line_color" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/file_share_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/file_share_type_file_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/file_share_type" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/line3"
            android:layout_alignLeft="@+id/line3"
            android:layout_marginBottom="10dp"
            android:text="文件分类管理"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignBottom="@+id/file_share_type_file_img"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/file_share_type_file_img"
            android:background="@color/global_line_color" />

    </RelativeLayout>
</LinearLayout>