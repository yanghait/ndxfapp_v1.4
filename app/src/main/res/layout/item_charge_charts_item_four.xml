<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/constrain_root"
    android:layout_height="30dp">

    <TextView
        android:id="@+id/country_name"
        android:layout_width="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="昆明市"
        android:textColor="@color/black"
        android:textSize="@dimen/_11sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/rate_green"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/item_rate_shape_four"
        app:layout_constraintLeft_toRightOf="@+id/country_name"
        app:layout_constraintRight_toLeftOf="@+id/rate_yellow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        />

    <TextView
        android:id="@+id/rate_yellow"
        android:layout_width="0dp"
        android:layout_height="10dp"
        app:layout_constraintHorizontal_weight="2"
        android:background="@drawable/item_rate_shape_four2"
        app:layout_constraintLeft_toRightOf="@+id/rate_green"
        app:layout_constraintRight_toLeftOf="@+id/rate_text1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="7dp"
        />

    <TextView
        android:id="@+id/rate_text1"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/rate_text2"
        app:layout_constraintLeft_toRightOf="@+id/rate_yellow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="485"
        android:gravity="center"
        android:textSize="@dimen/_11sp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/rate_text2"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="176"
        android:gravity="center"
        android:textSize="@dimen/_11sp"
        android:textColor="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/rate_text1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>