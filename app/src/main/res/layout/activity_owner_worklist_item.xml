<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/special_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="云南驰宏锌股份有限公司"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <ImageView
            android:id="@+id/image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/title"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/my_workorder" />

        <TextView
            android:id="@+id/title_one"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/title"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/image"
            android:gravity="center_vertical"
            android:text="室外消火栓给水系统"
            android:textColor="@color/black" />


        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/title_one"
            android:layout_alignLeft="@+id/title_one"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="工单状态"
                android:textColor="@color/global_button_stroke_color"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_content1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="申请终止"
                android:textColor="@color/flat_alizarin"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/linear1"
            android:layout_alignLeft="@+id/linear1"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="工单编号"
                android:textColor="@color/global_button_stroke_color"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_content2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="24567687988014"
                android:textColor="@color/global_button_stroke_color"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/linear2"
            android:layout_alignLeft="@+id/linear2"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="发起时间"
                android:textColor="@color/global_button_stroke_color"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_content3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2018-8-21 16:21:34"
                android:textColor="@color/global_button_stroke_color"
                android:textSize="@dimen/_12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/linear3"
            android:layout_alignLeft="@+id/linear2"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="负责人"
                android:textColor="@color/global_button_stroke_color"
                android:textSize="@dimen/_12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_content4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="@color/global_button_stroke_color"
                android:textSize="@dimen/_12sp" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/special_view"
        android:background="@color/global_line_color" />

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/line"
        android:clickable="false"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_worklist_shape"
            android:text="终止"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/button4"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_worklist_shape"
            android:text="终止"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/button1"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_worklist_shape"
            android:text="终止"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button2"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_worklist_one_shape"
            android:text="催办"
            android:textColor="@color/tool_bar"
            android:textSize="12sp" />

    </LinearLayout>
</RelativeLayout>