<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/item_project_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_16sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="曲靖南兴花园"/>

    <TextView
        android:id="@+id/item_project_type"
        android:layout_width="wrap_content"
        android:text="劳动密集型工厂"
        android:gravity="center"
        android:padding="6dp"
        android:textSize="@dimen/_12sp"
        android:textColor="@color/charts_radio_select"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/item_project_title"
        app:layout_constraintTop_toBottomOf="@+id/item_project_title"
        android:background="@drawable/charts_project_list_button"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_project_count"
        android:layout_width="wrap_content"
        android:text="456"
        android:textColor="#CD100F"
        android:textSize="@dimen/_18sp"
        app:layout_constraintTop_toBottomOf="@+id/item_project_title"
        app:layout_constraintTop_toTopOf="@+id/item_project_type"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="15dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_project_location"
        android:drawablePadding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/item_project_type"
        app:layout_constraintLeft_toLeftOf="@+id/item_project_type"
        app:layout_constraintRight_toLeftOf="@id/text09"
        android:layout_width="0dp"
        android:layout_marginEnd="5dp"
        android:textSize="@dimen/_12sp"
        android:text="昆明市-五华区"
        android:layout_marginTop="10dp"
        android:textColor="#a3a3a3"
        android:layout_marginBottom="20dp"
        android:drawableStart="@mipmap/inspect_location"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text09"
        app:layout_constraintTop_toTopOf="@+id/item_project_location"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/_12sp"
        android:textColor="#a3a3a3"
        android:text="历史报警"
        android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/item_project_location"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/menu_normal_bac"/>

</androidx.constraintlayout.widget.ConstraintLayout>