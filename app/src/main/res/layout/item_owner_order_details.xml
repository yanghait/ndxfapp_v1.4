<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/order_detail_line1"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/item_order_details_icon"
        android:layout_alignRight="@+id/item_order_details_icon"
        android:orientation="vertical">
        <TextView
            android:id="@+id/order_detail_line0"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/fire_fire" />
    </LinearLayout>

    <ImageView
        android:id="@+id/item_order_details_icon"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginLeft="80dp"
        android:layout_below="@id/order_detail_line1"
        android:src="@mipmap/workorder_time" />

    <TextView
        android:id="@+id/tv_time_top"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_alignTop="@+id/item_order_details_icon"
        android:text="2018-07-08"
        android:textSize="@dimen/timer_shaft_time_text_size"
        android:gravity="center"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_time_bottom"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_time_top"
        android:gravity="center"
        android:text="13:21:34"
        android:textSize="@dimen/timer_shaft_time_text_size"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_order_details_icon"
        android:layout_alignLeft="@+id/item_order_details_icon"
        android:layout_alignRight="@+id/item_order_details_icon"
        android:layout_alignBottom="@+id/item_detail_grid_view"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_order_details_line"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/fire_fire" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_order_details_icon"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/item_order_details_icon"
        android:gravity="end|center_vertical"
        android:layout_marginTop="3dp"
        android:text="工单完结"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/linear_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title_state"
        android:layout_alignLeft="@+id/tv_title_state"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_person1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="事件人员:"
            android:textSize="@dimen/_12sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="测试维保公司，电话：13422567425"
            android:textSize="@dimen/_12sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_tv1"
        android:layout_alignLeft="@+id/linear_tv1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_company1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人员单位:"
            android:textSize="@dimen/_12sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="云南诺顿消防工程有限公司"
            android:textSize="@dimen/_12sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_tv2"
        android:layout_alignLeft="@+id/linear_tv2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="事件内容:"
            android:textSize="@dimen/_12sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:textSize="@dimen/_12sp"
            android:text="云南诺顿消防工程有限公司的测试维保公司于2018/8/17 16:46:19发起工单"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_tv3"
        android:layout_alignLeft="@+id/linear_tv3"
        android:paddingBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_note1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注内容:  "
            android:textSize="@dimen/_12sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="火灾风险"
            android:textSize="@dimen/_12sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <com.ynzhxf.nd.xyfirecontrolapp.ui.CustomGridView
        android:id="@+id/item_detail_grid_view"
        android:layout_below="@+id/linear_tv4"
        android:layout_alignLeft="@+id/linear_tv4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:horizontalSpacing="5dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp">

    </com.ynzhxf.nd.xyfirecontrolapp.ui.CustomGridView>

</RelativeLayout>