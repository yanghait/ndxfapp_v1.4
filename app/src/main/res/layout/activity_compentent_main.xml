<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ynzhxf.nd.xyfirecontrolapp.ui.HomeViewPager
        android:id="@+id/vp_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/space_bar_line" />

    <View
        android:id="@+id/space_bar_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/bbl"
        android:background="@color/global_line_color"/>

    <com.chaychan.library.BottomBarLayout
        android:id="@+id/bbl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="3dp"
        android:paddingBottom="3dp">

        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconNormal="@drawable/ic_index_one2"
            app:iconSelected="@drawable/ic_index_one1"
            app:itemMarginTop="5dp"
            app:itemText="首页"
            app:itemTextSize="12sp"
            app:textColorNormal="#7b8196"
            app:textColorSelected="#323232" />

        <com.chaychan.library.BottomBarItem
            android:id="@+id/main_statistics"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconNormal="@drawable/charts_pandect_two"
            app:iconSelected="@drawable/charts_pandect_one"
            app:itemMarginTop="5dp"
            app:itemText="总览"
            app:itemTextSize="12sp"
            app:textColorNormal="#7b8196"
            app:textColorSelected="#323232" />

        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconNormal="@drawable/ic_message_one2"
            app:iconSelected="@drawable/ic_message_one1"
            app:itemMarginTop="5dp"
            app:itemText="消息"
            app:itemTextSize="12sp"
            app:textColorNormal="#7b8196"
            app:textColorSelected="#323232" />


        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconNormal="@drawable/ic_person_one2"
            app:iconSelected="@drawable/ic_person_one1"
            app:itemMarginTop="5dp"
            app:itemText="个人"
            app:itemTextSize="12sp"
            app:textColorNormal="#7b8196"
            app:textColorSelected="#323232" />

    </com.chaychan.library.BottomBarLayout>

</RelativeLayout>
