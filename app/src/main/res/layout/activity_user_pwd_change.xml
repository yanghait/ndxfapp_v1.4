<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include  layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_bottom"
            android:textSize="@dimen/txt_title_second"
            android:layout_marginLeft="3dp"
            android:text="原密码："/>
        <EditText
            android:id="@+id/etxt_oldpwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="@dimen/txt_content_normal"
            android:theme="@style/edittext_orange"
            android:hint="请输入原密码"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_bottom"
            android:textSize="@dimen/txt_title_second"
            android:layout_marginLeft="3dp"
            android:text="新密码："/>
        <EditText
            android:id="@+id/etxt_newpwd1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="@dimen/txt_content_normal"
            android:theme="@style/edittext_orange"
            android:singleLine="true"
            android:hint="请输入新密码"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_bottom"
            android:textSize="@dimen/txt_title_second"
            android:layout_marginLeft="3dp"
            android:text="确认密码："/>
        <EditText
            android:id="@+id/etxt_newpwd2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="@dimen/txt_content_normal"
            android:theme="@style/edittext_orange"
            android:singleLine="true"
            android:hint="请再次输入新密码"/>
        <TextView
            android:id="@+id/txt_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_left_right"
            android:textSize="@dimen/txt_content_normal"
            android:textColor="@color/flat_alizarin"/>
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:background="@drawable/button_cancel"
            android:layout_marginTop="@dimen/padding_left_right"
            android:layout_height="40dp"
            android:textColor="@color/white"
            style="?android:attr/borderlessButtonStyle"
            android:text="提交"/>
    </LinearLayout>

</LinearLayout>
