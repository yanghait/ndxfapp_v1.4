<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@mipmap/bac_bar_title"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息中心"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_title_first"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/tool_bar">

        <TextView
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxEms="14"
            android:singleLine="true"
            android:text="消息中心"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_title_first"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:id="@+id/ly_msg_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_bottom"
        android:background="@drawable/menu_img_seletor"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_left_right">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_note" />

            <TextView
                android:id="@+id/txt_user_note_count"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="32dp"
                android:background="@drawable/solid_point_red"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_top_bottom"
            android:text="通知公告"
            android:textSize="@dimen/txt_title_second"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_msg_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_bottom"
        android:background="@drawable/menu_img_seletor"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_left_right">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_alarm" />

            <TextView
                android:id="@+id/txt_user_alarm_count"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="26dp"
                android:background="@drawable/solid_point_red"
                android:gravity="center"
                android:text="99"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:visibility="gone"/>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_top_bottom"
            android:text="报警记录"
            android:textSize="@dimen/txt_title_second"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
