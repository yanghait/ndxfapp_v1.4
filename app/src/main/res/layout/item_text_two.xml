<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_top_bottom"
        android:layout_gravity="center_vertical">
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:visibility="gone"
            android:src="@mipmap/position"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/menu_img_seletor">
            <TextView
                android:id="@+id/node_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:paddingLeft="@dimen/padding_left_right"
                android:textSize="@dimen/txt_content_normal"
                android:text=""
                />
            <TextView
                android:id="@+id/node_discribe"
                android:paddingLeft="@dimen/padding_left_right"
                android:textSize="10sp"
                android:textColor="@color/global_gray_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:id="@+id/message_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginRight="15dp"
            android:layout_marginTop="7dp"
            />
    </LinearLayout>
    <View
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:background="@color/global_line_color"
        android:layout_width="match_parent"/>
</LinearLayout>