<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ly_contant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_top_bottom"
        android:background="@drawable/menu_img_seletor"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:background="@drawable/menu_img_seletor"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/circle_point_build"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/solid_point_red"
                />
            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_left_right"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="建筑名称"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="25dp"
            android:layout_marginRight="25dp"
            android:paddingRight="@dimen/padding_left_right">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingTop="@dimen/padding_top_bottom">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentLeft="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_content_normal"
                        android:text="楼层数量:"/>
                    <TextView
                        android:id="@+id/txt_floor_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_content_normal"
                        android:text=""/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_top_bottom"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_content_normal"
                    android:text="设备总数"/>
                <View
                    android:layout_height="0.5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="@dimen/margin_top_bottom"
                    android:layout_marginRight="@dimen/margin_top_bottom"
                    android:background="#d9d9d9"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/txt_total_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="32132"/>

            </LinearLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0,1,2">
                <TableRow android:paddingTop="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_normal"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:gravity="center_horizontal"
                            android:textStyle="bold"
                            android:textColor="@color/fire_normal"
                            android:text="0"/>
                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/txt_content_small"
                            android:textColor="@color/black"
                            android:gravity="center_horizontal"
                            android:text="正常数量"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/fire_action"
                            android:text="0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/txt_content_small"
                            android:textColor="@color/black"
                            android:text="动作数量"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_fault"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"
                            android:textColor="@color/fire_fault"
                            android:text="0"/>
                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/txt_content_small"
                            android:textColor="@color/black"
                            android:gravity="center_horizontal"
                            android:text="故障数量"/>

                    </LinearLayout>
                </TableRow>
                <TableRow android:paddingTop="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_close"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/fire_close"
                            android:gravity="center_horizontal"
                            android:text="0"/>
                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/txt_content_small"
                            android:textColor="@color/black"
                            android:gravity="center_horizontal"
                            android:text="屏蔽数量"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_manage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/fire_manage"
                            android:text="0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/txt_content_small"
                            android:textColor="@color/black"
                            android:text="监管数量"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_open"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"
                            android:textColor="@color/fire_open"
                            android:text="0"/>
                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/txt_content_small"
                            android:gravity="center_horizontal"
                            android:textColor="@color/black"
                            android:text="启动数量"/>

                    </LinearLayout>
                </TableRow>
                <TableRow android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_feed"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/fire_feed"
                            android:gravity="center_horizontal"
                            android:text="0"/>
                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/txt_content_small"
                            android:textColor="@color/black"
                            android:gravity="center_horizontal"
                            android:text="反馈数量"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_fire"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/fire_fire"
                            android:text="0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/txt_content_small"
                            android:textColor="@color/black"
                            android:text="火警数量"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_outline"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"
                            android:textColor="@color/fire_outline"
                            android:text="0"/>
                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/txt_content_small"
                            android:textColor="@color/black"
                            android:gravity="center_horizontal"
                            android:text="掉线数量"/>

                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_height="5dp"
        android:background="@color/menu_normal_bac"
        android:layout_width="match_parent"/>
</LinearLayout>