<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:id="@+id/timer_top_line"
        android:layout_width="10dp"
        android:layout_height="15dp"
        android:layout_marginLeft="80dp"
        android:orientation="vertical">

        <TextView

            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#bbbbbb" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_inspect_details_icon"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_below="@+id/timer_top_line"
        android:layout_marginLeft="80dp"
        android:background="@drawable/inspect_flag_shape" />

    <TextView
        android:id="@+id/tv_time_top"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_inspect_details_icon"
        android:gravity="top|center_horizontal"
        android:text="2018-07-08"
        android:textColor="@color/inspection_list_text"
        android:textSize="@dimen/timer_shaft_time_text_size" />

    <TextView
        android:id="@+id/tv_time_bottom"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_time_top"
        android:gravity="center"
        android:text="13:21:34"
        android:textColor="@color/inspection_list_text"
        android:textSize="@dimen/timer_shaft_time_text_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_inspect_details_icon"
        android:layout_alignLeft="@+id/item_inspect_details_icon"
        android:layout_alignRight="@+id/item_inspect_details_icon"
        android:layout_alignBottom="@+id/item_detail_grid_view"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_order_details_line"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#bbbbbb" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_inspect_details_icon"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/item_inspect_details_icon"
        android:gravity="left|top"
        android:text="灭火器"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/linear_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title_state"
        android:layout_alignLeft="@+id/tv_title_state"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_person1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注说明:"
            android:textColor="@color/global_gray_text_color"
            android:textSize="@dimen/_12sp" />

        <TextView
            android:id="@+id/tv_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="测试维保公司，电话：13422567425"
            android:textColor="@color/global_gray_text_color"
            android:textSize="@dimen/_12sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_line"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/linear_tv1"
        android:layout_alignLeft="@+id/linear_tv1"
        android:orientation="vertical"
        android:visibility="gone">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_line"
        android:layout_alignLeft="@+id/layout_line"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_company1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:src="@mipmap/inspect_location" />

        <TextView
            android:id="@+id/tv_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:text="A栋12区"
            android:textColor="@color/global_gray_text_color"
            android:textSize="@dimen/_12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_tv2"
        android:layout_alignLeft="@+id/linear_tv2"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="巡检人:"
            android:textColor="@color/global_gray_text_color"
            android:textSize="@dimen/_12sp" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="李某某"
            android:textColor="@color/global_gray_text_color"
            android:textSize="@dimen/_12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_tv3"
        android:layout_alignLeft="@+id/linear_tv3"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_note1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检查结果: "
            android:textColor="@color/global_gray_text_color"
            android:textSize="@dimen/_12sp" />

        <TextView
            android:id="@+id/tv_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="异常"
            android:textColor="@color/fire_fire"
            android:textSize="@dimen/_12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_tv4"
        android:layout_alignLeft="@+id/linear_tv4"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/tv_note2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注:  "
            android:textColor="@color/global_gray_text_color"
            android:textSize="@dimen/_12sp" />

        <TextView
            android:id="@+id/tv_note3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="火灾风险"
            android:textColor="@color/global_gray_text_color"
            android:textSize="@dimen/_12sp" />
    </LinearLayout>

    <com.ynzhxf.nd.xyfirecontrolapp.ui.CustomGridView
        android:id="@+id/item_detail_grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_tv5"
        android:layout_alignLeft="@+id/linear_tv5"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:horizontalSpacing="5dp"
        android:numColumns="3"
        android:paddingBottom="10dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp">

    </com.ynzhxf.nd.xyfirecontrolapp.ui.CustomGridView>

</RelativeLayout>