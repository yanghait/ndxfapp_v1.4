<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="@dimen/padding_top_bottom"
        android:background="@drawable/menu_img_seletor"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/pro_index"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="1"
            android:textSize="@dimen/txt_title_second"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/item_project_list_cir"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="9dp"
            android:paddingBottom="5dp"
            >
            <TextView
                android:id="@+id/pro_name"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_content_normal"
                android:paddingTop="2dp"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/pro_address"
                android:paddingTop="2dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_content_small"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/pro_attr1_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/global_gray_text_color"
                        android:textSize="@dimen/txt_content_small_three"
                        />
                    <TextView
                        android:id="@+id/pro_attr1_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/global_gray_text_color"
                        android:textSize="@dimen/txt_content_small_three"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="right|bottom"
                    android:paddingRight="5dp"
                    android:paddingBottom="2dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/pro_attr2_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/global_gray_text_color"
                        android:textSize="@dimen/txt_content_small_three"
                        />
                    <TextView
                        android:id="@+id/pro_attr2_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/flat_peterriver"
                        android:textStyle="bold"
                        android:textSize="@dimen/txt_title_first"
                        />
                    <TextView
                        android:id="@+id/pro_attr2_extra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_content_small_three"
                        android:textColor="@color/global_gray_text_color"
                        android:text="ä¸ª"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_height="1px"
        android:background="@color/global_line_color"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"/>
</LinearLayout>