<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_normal_bac"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/menu_normal_bac"
        android:gravity="bottom"
        android:paddingLeft="25dp"
        android:paddingBottom="8dp"
        android:text="移交维保人员"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_hand_over_receive"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="25dp"
        android:textColor="@color/black"
        android:paddingRight="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/menu_normal_bac"
        android:paddingLeft="25dp"
        android:gravity="bottom"
        android:paddingBottom="8dp"
        android:text="接收维保人员"
        android:textSize="16sp" />

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/hand_over_material_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sp"
        android:popupBackground="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/menu_normal_bac"
        android:gravity="bottom"
        android:paddingBottom="8dp"
        android:paddingLeft="25dp"
        android:text="移交原因"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/hand_over_content"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@null"
            android:gravity="left|top"
            android:hint="请输入移交原因"
            android:textSize="@dimen/_14sp"
            android:paddingLeft="24dp"
            android:paddingTop="8dp"
            android:paddingRight="15dp"
            android:textColor="@color/black"
            android:paddingBottom="8dp" />
    </LinearLayout>

    <Button
        android:id="@+id/hand_over_confirm"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/btn_normal_shape"
        android:text="确认"
        android:textColor="@color/white"
        />

</LinearLayout>